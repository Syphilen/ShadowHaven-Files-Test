<chummer xmlns="" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.w3.org/2001/XMLSchema critterpowers.xsd">

  <powers>
    <power>
      <id>224f6093-af49-4fd4-a30a-b0c38673ffb7</id>
      <!-- Secretion/Substance Extrusion -->
      <category>Mundane/Infected</category>
      <karma>9</karma>
      <required>
        <oneof>
          <quality>Infected: Vampire (Human)</quality>
          <quality>Infected: Vampire (Non-Human)</quality>
          <quality>Infected: Sukuyan (Human)</quality>
          <quality>Infected: Sukuyan (Non-Human)</quality>
        </oneof>
      </required>
    </power>
    <power>
      <id>4881c2cc-1e45-43ad-89df-9e5b264648f2</id>
      <!-- Silence -->
      <category>Paranormal/Infected</category>
      <required>
        <oneof>
          <quality>Infected: Banshee</quality>
        </oneof>
      </required>
    </power>
    <power>
      <id>9c59fb9c-85b4-449a-978a-a07d6ccf31a2</id>
      <!-- Pounce -->
      <category>Mundane/Infected</category>
      <required>
        <oneof>
          <quality>Infected: Bandersnatch</quality>
        </oneof>
      </required>
    </power>
    <power>
      <id>7cdbe90b-b16a-43c0-a20e-b4a54b83c6ed</id>
      <!-- Wall Walking -->
      <category>Mundane/Infected</category>
      <required>
        <oneof>
          <quality>Infected: Loup-Garou</quality>
        </oneof>
      </required>
    </power>
    <power>
      <id>8af6b45a-ed52-4063-a60e-7428a818a7ab</id>
      <!-- Darkness -->
      <category>Paranormal/Infected</category>
      <required>
        <oneof>
          <quality>Infected: Grendel</quality>
        </oneof>
      </required>
    </power>
    
  <!-- Drake Stuff -->
    <power>
      <id>dafb81bd-7b92-487a-a739-465c69bcefcd</id>
      <!-- Adaptive Coloration -->
      <required>
        <oneof amendoperation="replace">
          <quality>Dracoform (Sea Drake)</quality>
          <quality>Dracoform, Latent (Sea Drake)</quality>
        </oneof>
      </required>
    </power>
    <power>
      <id>eda3036b-441c-45bf-9e97-aac7cdd87054</id>
      <!-- Flight -->
      <forbidden>
        <oneof amendoperation="replace">
          <quality>Dracoform (Sea Drake)</quality>
          <quality>Dracoform, Latent (Sea Drake)</quality>
        </oneof>
      </forbidden>
      <required>
        <oneof amendoperation="replace">
          <quality>Dracoform (Feathered Drake)</quality>
          <quality>Dracoform (Western Drake)</quality>
          <quality>Dracoform, Latent (Feathered Drake)</quality>
          <quality>Dracoform, Latent (Western Drake)</quality>
        </oneof>
      </required>
    </power>
    <power>
      <id>947047a8-632f-4d05-84a0-873e994be07c</id>
      <!-- Heavy Scales -->
      <required>
        <oneof amendoperation="replace">
          <quality>Dracoform (Western Drake)</quality>
          <quality>Dracoform, Latent (Western Drake)</quality>
        </oneof>
      </required>
      <karma>16</karma>
    </power>
    <power>
      <id>276c718b-7176-403a-9452-48e58b1f29e3</id>
      <!-- Magical Flight -->
      <required>
        <oneof amendoperation="replace">
          <quality>Dracoform (Eastern Drake)</quality>
          <quality>Dracoform, Latent (Eastern Drake)</quality>
        </oneof>
      </required>
    </power>
    <power>
      <id>283f5a56-3d53-4155-8a85-63248e4d7cdc</id>
      <!-- Tail Stinger -->
      <required>
        <oneof amendoperation="replace">
          <quality>Dracoform (Feathered Drake)</quality>
          <quality>Dracoform, Latent (Feathered Drake)</quality>
        </oneof>
      </required>
    </power>
  </powers>
  <!-- End Region -->
</chummer>
